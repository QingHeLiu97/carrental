<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yubin.mapper.UserMapper">
    <sql id="UserColumns">
       user_id AS userId,
       token AS token,
       username AS username,
       password AS password,
       sex AS sex,
       phone AS phone,
       email AS email,
       id_card AS idCard,
       address AS address,
       create_time AS createTime,
       update_time AS updateTime,
       status AS status
    </sql>

    <insert id="insertUser" parameterType="com.yubin.entity.User">
        INSERT INTO user(
         username,
         password,
         sex,
         phone,
         email,
         id_card,
         address,
         create_time,
         update_time,
        )VALUES (
        #{username},
        #{password},
        #{sex},
        #{phone},
        #{email},
        #{idCard},
        #{address},
        #{createTime},
        #{updateTime}
        )
    </insert>

    <delete id="deleteUser">
    update  user set
    status = "1"
    where user_id =#{userId}
    </delete>

    <update id="updateUser">
        update user set
        <if test="username !='' and username !=null " >username =#{username} ,</if>
        <if test="password !='' and password !=null " >password =#{password} ,</if>
        <if test="sex !='' and sex !=null " >sex =#{sex} ,</if>
        <if test="phone !='' and phone !=null " >phone =#{phone} ,</if>
        <if test="email !='' and email !=null " >email =#{email} ,</if>
        <if test="idCard !='' and idCard !=null " >id_card =#{idCard} ,</if>
        <if test="address !='' and address !=null " >address =#{address} ,</if>
        <if test="status !='' and status !=null " >status =#{status} ,</if>
        <if test="token !='' and token !=null " >token =#{token} ,</if>
        <if test=" updateTime !=null " >update_time =#{updateTime} </if>
        where user_id = #{userId}
    </update>

    <select id="getUserInfo" resultType="com.yubin.entity.User">
    select
    <include refid="UserColumns"/>
    from user
    where
        <if test="username !='' and username !=null " > username =#{username}  </if>
        <if test="password !='' and password !=null " >and password =#{password} </if>
        <if test="sex !='' and sex !=null " > and sex =#{sex} </if>
        <if test="phone !='' and phone !=null " >and phone =#{phone} </if>
        <if test="email !='' and email !=null " > and email =#{email} </if>
        <if test="idCard !='' and idCard !=null " > and id_card =#{idCard} </if>
        <if test="address !='' and address !=null " >and address =#{address} </if>
    </select>

    <select id="selectAll" resultType="com.yubin.entity.User">
        select
        <include refid="UserColumns"/>
        from user
    </select>

    <select id="getListSize" resultType="com.yubin.entity.User">
        select
        <include refid="UserColumns"/>
        from user
    </select>

    <select id="selectAllUser" resultType="com.yubin.entity.User">
        select
        <include refid="UserColumns"/>
        from user where status = '0'
    </select>

    <select id="selectUserByid" resultType="com.yubin.entity.User">
        select
        <include refid="UserColumns"/>
        from user where user_id = #{userId}
    </select>

    <select id="selectUserRecord">
        select
        <include refid="UserColumns"/>
        from user
    </select>


</mapper>
